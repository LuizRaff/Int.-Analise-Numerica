CC      = gcc
CFLAGS  = -Wall -Wextra -std=c99 -O3
INCLUDE = -Iheader
SRC     = $(wildcard src/*.c)
OBJ     = $(SRC:.c=.o)

all: pendulo

pendulo: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@

test: pendulo
	$(CC) tests/test_rk4.c -Iheader -o tests/test_rk4 && tests/test_rk4

clean:
	rm -f src/*.o pendulo tests/test_rk4 data/*.csv

.PHONY: all test clean
